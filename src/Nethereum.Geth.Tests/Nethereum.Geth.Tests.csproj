  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Nethereum.Geth\Nethereum.Geth.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="15.5.0-preview-20170810-02" />
